[alias]
  aa = add --all
  amend = "!git commit --amend -C HEAD --date=$(date +%Y-%m-%dT%H:%M:%S)"
  ap = add --patch
  au = add -u
  b = branch
  ci = commit -v
  co = checkout
  co-pr = !sh -c 'git fetch origin pull/$1/head:pr/$1 && git checkout pr/$1' -
  d = diff
  dc = diff --cached
  fixup = "!git commit --fixup $(git squash-target)"
  l = "!git ll -12"
  la = "!git ll --all"
  ll = "log --graph --pretty='format:%C(yellow)%h %C(green)%ar %C(cyan)%an %C(red)%d %C(reset)%s'"
  lt = "!git ll --simplify-by-decoration"
  pf = push --force-with-lease
  rba = rebase --abort
  rbc = rebase --continue
  s = status -sb
  sha = "!git rev-list --max-count 1 HEAD | tr -d '\n' | pbcopy"
  squash = "!git ci --squash $(git squash-target)"
  # first parent whose commit message does not contain squash! or fixup!
  squash-target = "!git log --oneline | grep -v 'squash!\\|fixup!' | head -n 1 | awk '{ print $1 }'"
  todo = "!git grep TODO -- $(git diff --name-only ${1:-master}...HEAD)"
  wd = diff --word-diff
[color]
  ui = auto
[commit]
  gpgsign = true
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  pager = diff-so-fancy | less --tabs=1,5 -R
[fetch]
  prune = true
[github]
  user = thorncp
[grep]
  lineNumber = true
[merge]
  ff = only
[push]
  default = current
[rebase]
  autosquash = true
[user]
  name = Chris Thorn
  email = chris@thorn.co
  signingkey = F8AC4201
